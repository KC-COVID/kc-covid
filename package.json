{
  "name": "kc-covid",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kansas-City-Mutual-Aid/kc-covid.git"
  },
  "scripts": {
    "build": "npm run clean:build && npm run build:client && npm run build:server",
    "build:dev": "npm run clean:build && npm run build:client:dev && webpack --config webpack.config.js -d",
    "build:server": "webpack --mode production --config webpack.config.js",
    "build:client": "cd ./client && npm run build",
    "build:client:dev": "cd ./client && npm run build:dev",
    "build-win": "powershell -Command \"Copy-Item 'src/index.html' 'dist/index.html'\" && npm run pack-win",
    "clean": "npm run clean:client && npm run clean:server",
    "clean:build": "if [ -d './dist' ]; then rimraf ./dist; fi && mkdir dist",
    "clean:client": "cd ./client && npm run clean",
    "clean:server": "rimraf ./node_modules",
    "clean:install": "npm run clean && npm install",
    "install:client": "cd ./client && npm install",
    "start": "node ./dist/server.js",
    "start:dev": "cd ./client && npm run start",
    "postinstall": "npm run install:client && npm run build "
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "airtable": "^0.8.1",
    "express": "^4.17.1",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.4.2",
    "enzyme-react-intl": "^2.0.6",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-loader": "^4.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "file-loader": "^6.0.0",
    "jest": "^25.2.7",
    "jest-matchers": "^20.0.3",
    "jest-snapshot": "^25.1.0",
    "mocha": "^7.1.1",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "style-loader": "^1.1.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^4.0.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-node-externals": "^1.7.2"
  },
  "main": "/dist/index.html",
  "directories": {
    "lib": "lib",
    "test": "tests"
  }
}
