{
  "name": "kc-covid",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kansas-City-Mutual-Aid/kc-covid.git"
  },
  "scripts": {
    "build": "cp src/index.html dist/index.html && npm run pack",
    "build-win": "powershell -Command \"Copy-Item 'src/index.html' 'dist/index.html'\" && npm run pack-win",
    "clean": "rimraf package-lock.json && rimraf ./node_modules",
    "clean:install": "npm run clean && npm install",
    "compile": "npm run compile:clean && npm run compile:build",
    "compile:clean": "if [ -d './src' ]; then rimraf ./lib; fi",
    "compile:build": "babel src --out-dir lib --copy-files",
    "pack": "NODE_ENV=production webpack --config webpack.config.js -p",
    "pack-win": "webpack --config webpack.config.js -p",
    "start": "webpack-dev-server --mode development",
    "test": "react-scripts test",
    "lint:scss": "stylelint src/**/*.scss",
    "test:lint": "eslint --fix --ext .js,.jsx, . && npm run lint:scss",
    "test:jest": "jest --config jestconfig.json"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^4.9.7",
    "bootstrap": "^4.4.1",
    "react": "^16.13.1",
    "react-bootstrap": "^1.0.0-beta.17",
    "react-dom": "^16.13.1",
    "react-hook-form": "^5.1.3",
    "react-scripts": "^3.4.0",
    "react-social-icons": "^4.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/plugin-transform-modules-commonjs": "^7.7.4",
    "@babel/plugin-transform-object-assign": "^7.7.4",
    "@babel/plugin-transform-react-jsx-source": "^7.7.4",
    "@babel/plugin-transform-regenerator": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.4",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "@babel/runtime": "^7.7.4",
    "babel-loader": "^8.0.6",
    "babel-plugin-webpack-alias": "^2.1.2",
    "bootstrap-react": "0.3.1",
    "css-loader": "^3.4.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-react-intl": "^2.0.6",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "file-loader": "^6.0.0",
    "html-loader": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "25.1.0",
    "jest-matchers": "^20.0.3",
    "jest-snapshot": "^25.1.0",
    "mocha": "^7.1.1",
    "node-sass": "^4.13.1",
    "react-hot-loader": "4.12.20",
    "react-svg-loader": "^3.0.3",
    "rimraf": "^3.0.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "stylelint": "^13.2.1",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-suitcss": "^3.0.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "main": "/dist/index.html",
  "directories": {
    "lib": "lib",
    "test": "tests"
  }
}
